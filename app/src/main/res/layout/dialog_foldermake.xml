<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    android:backgroundTint="#00000000">

    <ImageView
        android:id="@+id/dialog_folder_background"
        android:layout_width="260dp"
        android:layout_height="280dp"
        android:scaleType="fitXY"
        android:src="@drawable/dialog_background"
        android:background="#00000000"
        android:backgroundTint="#00000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/dialog_folder_close"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="32dp"
        android:scaleType="fitXY"
        android:src="@drawable/close_dialog"
        app:layout_constraintEnd_toEndOf="@id/dialog_folder_background"
        app:layout_constraintTop_toTopOf="@id/dialog_folder_background" />

    <TextView
        android:id="@+id/dialog_folder_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="폴더의 이름을\n알려줘!"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        app:layout_constraintStart_toStartOf="@id/dialog_folder_title_et"
        app:layout_constraintTop_toTopOf="@id/dialog_folder_background"/>

    <EditText
        android:id="@+id/dialog_folder_title_et"
        android:layout_width="165dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_folder_title_tv"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:paddingStart="8dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:hint="제목을 입력하세요"
        android:backgroundTint="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:textSize="10sp"
        android:layout_marginEnd="6dp"
        android:textColor="#aaaaaa"
        android:gravity="center_horizontal"
        android:text="0/20"
        app:layout_constraintEnd_toEndOf="@id/dialog_folder_title_et"
        app:layout_constraintTop_toBottomOf="@id/dialog_folder_title_et"/>

    <ImageView
        android:id="@+id/dialog_foldermake_btn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:scaleType="fitXY"
        android:src="@drawable/dialog_button"
        app:layout_constraintStart_toStartOf="@id/dialog_folder_title_et"
        app:layout_constraintEnd_toEndOf="@id/dialog_folder_title_et"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="@id/dialog_folder_background"/>

    <TextView
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:text="폴더 만들기"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/dialog_foldermake_btn"
        app:layout_constraintEnd_toEndOf="@id/dialog_foldermake_btn"
        app:layout_constraintTop_toTopOf="@id/dialog_foldermake_btn"
        app:layout_constraintBottom_toBottomOf="@id/dialog_foldermake_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>