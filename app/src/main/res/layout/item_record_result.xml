<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/item_record_rectangle_back_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/box"
        android:elevation="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/item_record_rectangle_iv"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:translationZ="10dp"
        android:background="@drawable/folderresultbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/item_record_circle_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/circle_record_grey"
        android:scaleType="fitXY"
        android:translationZ="10dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="@id/item_record_rectangle_iv"
        app:layout_constraintTop_toTopOf="@id/item_record_rectangle_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_record_rectangle_iv"/>

    <TextView
        android:id="@+id/item_record_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:textStyle="bold"
        android:textSize="10sp"
        android:translationZ="10dp"
        android:layout_marginStart="11dp"
        android:textColor="#868686"
        android:text="돌려돌려 돌림판"
        app:layout_constraintStart_toEndOf="@id/item_record_circle_iv"
        app:layout_constraintTop_toTopOf="@id/item_record_circle_iv"
        app:layout_constraintBottom_toTopOf="@id/item_record_result_tv"/>

    <TextView
        android:id="@+id/item_record_result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/apple_sd_gothic_neo_sb"
        android:textStyle="bold"
        android:textSize="16sp"
        android:translationZ="10dp"
        android:layout_marginTop="3dp"
        android:textColor="#000000"
        android:text="결과: 버스"
        app:layout_constraintStart_toStartOf="@id/item_record_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_record_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_record_circle_iv"/>

    <ImageView
        android:id="@+id/item_record_pecil_iv"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/pencil_record"
        android:translationZ="10dp"
        android:scaleType="fitXY"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="@id/item_record_rectangle_iv"
        app:layout_constraintTop_toTopOf="@id/item_record_rectangle_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_record_rectangle_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>