<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clock_title_view"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:background="@color/white"
        android:elevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_otf_light"
            android:layout_marginStart="19dp"
            android:layout_marginBottom="15dp"
            android:textStyle="normal"
            android:textSize="32.2sp"
            android:textColor="#b0b0b0"
            android:text="&lt;"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="192dp"
            android:layout_height="29dp"
            android:fontFamily="@font/nanum_square_round_otf_extrabold"
            android:textStyle="normal"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:text="N시 방향"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wheel_contents_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/clock_title_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/clock_info_title_tv"
            android:layout_width="295dp"
            android:layout_height="38dp"
            android:fontFamily="@font/nanum_square_round_otf"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:text="어느 방향으로 발을 옮길까?"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/clock_info_tv"
            android:layout_width="301dp"
            android:layout_height="48dp"
            android:fontFamily="@font/nanum_square_round_otf"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#b8b8b8"
            android:gravity="center_horizontal"
            android:text="옵션 설정 후\n시계를 돌려줘!"
            app:layout_constraintTop_toBottomOf="@id/clock_info_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/clock_option_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_4"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/clock_go_btn"
            app:layout_constraintTop_toBottomOf="@id/clock_iv"
            />

        <ImageView
            android:id="@+id/clock_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clock_info_tv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#abffffff"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="4"
            android:fontFamily="@font/nanum_square_round_otf_extrabold"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="옵션 설정"
            app:layout_constraintStart_toStartOf="@id/clock_option_btn"
            app:layout_constraintEnd_toEndOf="@id/clock_option_btn"
            app:layout_constraintTop_toTopOf="@id/clock_option_btn"
            app:layout_constraintBottom_toBottomOf="@id/clock_option_btn"/>

        <ImageView
            android:id="@+id/clock_go_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_5"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toEndOf="@id/clock_option_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clock_iv"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_otf_extrabold"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="가보자GO"
            app:layout_constraintStart_toStartOf="@id/clock_go_btn"
            app:layout_constraintEnd_toEndOf="@id/clock_go_btn"
            app:layout_constraintTop_toTopOf="@id/clock_go_btn"
            app:layout_constraintBottom_toBottomOf="@id/clock_go_btn"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

