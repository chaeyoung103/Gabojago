<!--        app:layout_constraintEnd_toEndOf="@id/record_result_recyclerview"/>-->


    <ImageView
        android:id="@+id/record_more_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/menu"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/record_close_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/circle_record_menu"
        android:translationZ="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>


    <ImageView
        android:id="@+id/record_x_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/x"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="@id/record_close_iv"
        app:layout_constraintEnd_toEndOf="@id/record_close_iv"
        app:layout_constraintTop_toTopOf="@id/record_close_iv"
        app:layout_constraintBottom_toBottomOf="@id/record_close_iv"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/record_trashback_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ellipse_12"
        android:translationZ="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/record_trash_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/trash"
        android:translationZ="5dp"
        app:layout_constraintStart_toStartOf="@id/record_trashback_iv"
        app:layout_constraintEnd_toEndOf="@id/record_trashback_iv"
        app:layout_constraintTop_toTopOf="@id/record_trashback_iv"
        app:layout_constraintBottom_toBottomOf="@id/record_trashback_iv"/>

    <ImageView
        android:id="@+id/record_folderplusback_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ellipse_12"
        android:translationZ="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/record_folderplus_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/trash"
        android:translationZ="5dp"
        app:layout_constraintStart_toStartOf="@id/record_folderplusback_iv"
        app:layout_constraintEnd_toEndOf="@id/record_folderplusback_iv"
        app:layout_constraintTop_toTopOf="@id/record_folderplusback_iv"
        app:layout_constraintBottom_toBottomOf="@id/record_folderplusback_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>