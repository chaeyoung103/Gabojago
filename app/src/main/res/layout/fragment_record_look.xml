<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/record_look_title_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#fafafa"
        android:elevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/record_look_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/apple_sd_gothic_neo_r"
            android:text="&lt;"
            android:textColor="#b0b0b0"
            android:textSize="32.2sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/record_look_picture_vp"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/record_look_title_view"
        />

    <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
        android:id="@+id/record_look_circle_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsColor="#111111"
        app:dotsStrokeColor="#aaaaaa"
        app:dotsSize="10dp"
        app:dotsCornerRadius="5dp"
        app:dotsClickable="true"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/record_look_picture_vp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/record_look_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/record_look_circle_indicator"
        >
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/record_look_arrow_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/result_look_arrow"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/record_look_result_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뽑기 결과 보기"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/apple_sd_gothic_neo_r"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="@id/record_look_arrow_btn"
            app:layout_constraintTop_toTopOf="@id/record_look_arrow_btn"
            app:layout_constraintBottom_toBottomOf="@id/record_look_arrow_btn"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/record_result_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:listitem="@layout/item_look_pick"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="@id/record_look_view"
        app:layout_constraintTop_toBottomOf="@id/record_look_view"
        />
</androidx.constraintlayout.widget.ConstraintLayout>