<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wheel_title_view"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:background="#fafafa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_otf_light"
            android:layout_marginStart="19dp"
            android:layout_marginBottom="15dp"
            android:textStyle="normal"
            android:textSize="32.2sp"
            android:textColor="#b0b0b0"
            tools:text="&lt;"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="192dp"
            android:layout_height="29dp"
            android:fontFamily="@font/nanum_square_round_otf_extrabold"
            android:textStyle="normal"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            tools:text="돌려 돌려 돌림판"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/wheel_info_title_tv"
        android:layout_width="295dp"
        android:layout_height="38dp"
        android:fontFamily="@font/nanum_square_round_otf"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        tools:text="자유롭게 선택지를 만들어 봐!"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@id/wheel_title_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/wheel_info_tv"
        android:layout_width="301dp"
        android:layout_height="70dp"
        android:fontFamily="@font/nanum_square_round_otf"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#b8b8b8"
        android:gravity="center_horizontal"
        tools:text="옵션 설정 후\n돌림판을 돌려줘!"
        app:layout_constraintTop_toBottomOf="@id/wheel_info_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <RelativeLayout
        android:layout_width="273.286dp"
        android:layout_height="388dp"
        app:layout_constraintTop_toBottomOf="@id/wheel_info_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="264dp"
            android:layout_height="264dp"
            android:background="#ff6745">
        </View>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>