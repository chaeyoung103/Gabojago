<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.techtown.gabojago">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Gabojago">

        <activity android:name=".splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".splash.LoginActivity"/>
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <activity android:name=".menu.record.CalendarActivity"
            />
        <activity android:name=".menu.randomPick.wheel.WheelOptionActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar"
            android:windowSoftInputMode="adjustPan"
            />
        <activity android:name=".menu.randomPick.clock.ClockOptionActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar" />
        <activity android:name=".menu.randomPick.clock.ClockSelectActivity" />
        <activity android:name=".menu.randomPick.number.NumberOptionActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar"
            />
        <activity android:name=".menu.randomPick.number.NumberSelectActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar"
            />
        <activity android:name=".menu.randomPick.number.NumberSelectNumActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar"
            />
        <activity android:name=".menu.randomPick.color.ColorResultActivity"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar.Dim"
            />
    </application>
</manifest>